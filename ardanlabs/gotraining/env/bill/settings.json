{
    "go.goroot": "/usr/local/go",
    "go.gopath": "/Users/bill/code/go",
    "go.addTags": {},
    "go.alternateTools": {},
    "go.toolsManagement.autoUpdate": true,
    "go.useLanguageServer": true,
    "go.coverOnTestPackage": false,
    "go.lintFlags": [
        "-checks=all"
    ],

    "gopls": {
        "staticcheck": true,
        "usePlaceholders": true,    // add parameter placeholders when completing a function
        "completeUnimported": true, // autocomplete unimported packages
        "deepCompletion": true,     // enable deep completion
        "codelenses": {
            //"gc_details": true,
        }
    },

    "[go]": {
        "editor.snippetSuggestions": "none",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.codeLens": false,
    },

    "[javascript][typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "prettier.tabWidth": 4,
        "prettier.printWidth": 300,
        "prettier.singleQuote": true,
        "prettier.bracketSpacing": false,
        "prettier.trailingComma": "es5",
        "editor.codeLens": false
    },

    "[html][css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "prettier.tabWidth": 4,
        "prettier.printWidth": 200,
        "prettier.singleQuote": false,
        "prettier.bracketSpacing": false,
        "prettier.bracketSameLine": true,
        "prettier.trailingComma": "es5",
        "prettier.proseWrap": "always",
        "editor.codeLens": false
    },

    "workbench.tree.enableStickyScroll": false,
    "workbench.colorTheme": "Zenburn",
    "workbench.editorAssociations": {
        "*.a": "hexEditor.hexedit"
    },
    "workbench.colorCustomizations": {
        "[Zenburn]": {
            "editorBracketHighlight.foreground1": "#f6f8f7c9",
            "editorBracketHighlight.foreground2": "#f6f8f7c9",
            "editorBracketHighlight.foreground3": "#f6f8f7c9",
            "editorBracketHighlight.foreground4": "#f6f8f7c9",
            "editorBracketHighlight.foreground5": "#f6f8f7c9",
            "editorBracketHighlight.foreground6": "#f6f8f7c9",
            "editorBracketHighlight.unexpectedBracket.foreground": "#f6f8f7c9"
        }
    },
    "workbench.settings.applyToAllProfiles": [
        "html.format.wrapLineLength"
    ],

    "editor.lightbulb.enabled": "off",
    "editor.fontSize": 14,
    "editor.formatOnType": true,
    "editor.mouseWheelZoom": false,
    "editor.rulers": [80,120],
    "editor.trimAutoWhitespace": true,
    "editor.minimap.enabled": false,
    "editor.defaultFormatter": null,
    "editor.wordWrap": "off",
    "editor.guides.indentation": false,
    "editor.renderWhitespace": "none",
    "editor.stickyScroll.enabled": false,
    "editor.folding": false,
    "editor.detectIndentation": false,
    "editor.inlineSuggest.enabled": true,
    "editor.tokenColorCustomizations": {
        "[Zenburn]": {
            "textMateRules": [
                {
                    "scope": "variable.other",
                    "settings": {
                        "foreground": "#DEDEDE"
                    }
                }
            ]
        }
    },

    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/dist/public": true,
        "**/tmp": true,
        "**/tags": true,
        "**/public/dist": true,
        "**/.vscode": true
    },
    "files.trimTrailingWhitespace": false,

    "explorer.compactFolders": false,
    "explorer.confirmDragAndDrop": false,

    "window.newWindowDimensions": "maximized",
    "window.zoomLevel": 1,

    "liveshare.featureSet": "insiders",
    "liveshare.anonymousGuestApproval": "accept",

    "extensions.ignoreRecommendations": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "terminal.integrated.tabs.enabled": true,
    "testing.gutterEnabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "debug.javascript.codelens.npmScripts": "never",
    "VSCodeCounter.exclude": [
        "**/.gitignore",
        "**/.vscode/**",
        "**/node_modules/**",
        "**/vendor/**"
    ],
   

    "github.copilot.chat.setupTests.enabled": false,
    "github.copilot.chat.edits.suggestRelatedFilesForTests": false,
    "github.copilot.chat.edits.suggestRelatedFilesFromGitHistory": false,
   
    "testing.showCoverageInExplorer": false,
    "testing.saveBeforeTest": false,
    "github.copilot.chat.fixTestFailure.enabled": false
}